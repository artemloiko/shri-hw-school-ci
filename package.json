{
  "name": "shri-hw-school-ci",
  "version": "0.0.1",
  "description": "School CI. SHRI homework project.",
  "scripts": {
    "prod": "cd client && npm run build && cd ../server && npm run start:prod",
    "prod:test": "cd client && npm run build && cd ../server && cross-env NODE_TEST=test npm run start:prod",
    "prod:t": "cd server && cross-env NODE_TEST=test npm run start:prod",
    "dev:client": "cd client && npm run start",
    "dev:server": "cd server && npm run start",
    "dev": "npm-run-all --parallel dev:client dev:server",
    "test:e2e": "cross-env NODE_ENV=test hermione",
    "test:gui": "cross-env NODE_ENV=test hermione gui"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artuom130/shri-hw-school-ci.git"
  },
  "author": "Artem Loiko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/artuom130/shri-hw-school-ci/issues"
  },
  "homepage": "https://github.com/artuom130/shri-hw-school-ci#readme",
  "devDependencies": {
    "config": "^3.3.1",
    "cross-env": "^7.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  },
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/register": "^7.9.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "chai": "^4.2.0",
    "hermione": "^3.1.0",
    "html-reporter": "^5.15.2",
    "ignore-styles": "^5.0.1"
  }
}
